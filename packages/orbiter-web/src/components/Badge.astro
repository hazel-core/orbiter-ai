---
import { cn } from "../utils/merge";

interface Props {
  color?: "coral" | "zen-blue" | "zen-green" | "default";
  class?: string;
  [key: string]: any;
}

const { color = "default", class: className, ...rest } = Astro.props;

const colorStyles = {
  coral: "bg-coral/15 text-coral border-coral/20",
  "zen-blue": "bg-zen-blue/15 text-zen-blue border-zen-blue/20",
  "zen-green": "bg-zen-green/15 text-zen-green border-zen-green/20",
  default: "bg-dark/10 text-dark border-dark/10",
};
---

<span
  class={cn(
    "inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-medium transition-colors",
    colorStyles[color],
    className,
  )}
  {...rest}
>
  <slot />
</span>
