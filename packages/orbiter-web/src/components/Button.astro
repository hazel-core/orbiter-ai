---
import { cn } from "../utils/merge";

interface Props {
  variant?: "primary" | "bordered" | "default";
  href?: string;
  class?: string;
  [key: string]: any;
}

const { variant = "default", href, class: className, ...rest } = Astro.props;

const baseStyles =
  "inline-flex items-center justify-center gap-2 font-medium transition-all duration-200 hover:scale-[1.02] active:scale-[0.98] cursor-pointer select-none";

const variantStyles = {
  primary: "bg-dark text-paper px-5 py-2.5",
  bordered:
    "border-2 border-dark/80 text-dark px-5 py-2.5 hover:bg-dark hover:text-paper",
  default: "text-dark px-5 py-2.5 hover:bg-dark/5",
};

const roundedStyle = href ? "rounded-xl" : "rounded-lg";

const classes = cn(baseStyles, variantStyles[variant], roundedStyle, className);
---

{
  href ? (
    <a href={href} class={classes} {...rest}>
      <slot />
    </a>
  ) : (
    <button class={classes} {...rest}>
      <slot />
    </button>
  )
}
