---
import { cn } from "../utils/merge";

interface Props {
  label?: string;
  error?: string;
  required?: boolean;
  class?: string;
  [key: string]: any;
}

const { label, error, required, class: className, ...rest } = Astro.props;

const inputId = rest.id || rest.name || `input-${Math.random().toString(36).slice(2, 8)}`;
---

<div class={cn("flex flex-col gap-1.5", className)}>
  {label && (
    <label for={inputId} class="text-sm font-medium text-dark">
      {label}
      {required && <span class="text-coral ml-0.5">*</span>}
    </label>
  )}
  <input
    id={inputId}
    class={cn(
      "w-full bg-paper border rounded-lg px-3 py-2 text-dark placeholder:text-muted/60 transition-all duration-200 outline-none",
      error
        ? "border-coral focus:ring-2 focus:ring-coral/30"
        : "border-dark/[0.08] focus:border-coral focus:ring-2 focus:ring-coral/20",
    )}
    {...rest}
  />
  {error && <p class="text-sm text-coral">{error}</p>}
</div>
