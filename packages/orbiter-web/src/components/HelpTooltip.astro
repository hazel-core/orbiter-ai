---
interface Props {
  text: string;
  href?: string;
  class?: string;
}

const { text, href, class: className } = Astro.props;
---

<span class:list={["help-tooltip-wrapper relative inline-flex", className]}>
  {
    href ? (
      <a
        href={href}
        class="inline-flex items-center justify-center rounded-full w-4 h-4 text-muted/60 hover:text-coral hover:bg-coral/10 transition-colors no-underline"
        title={text}
      >
        <svg
          class="h-3.5 w-3.5"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="12" cy="12" r="10" />
          <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
          <line x1="12" y1="17" x2="12.01" y2="17" />
        </svg>
      </a>
    ) : (
      <button
        type="button"
        class="inline-flex items-center justify-center rounded-full w-4 h-4 text-muted/60 hover:text-coral hover:bg-coral/10 transition-colors cursor-help"
        title={text}
      >
        <svg
          class="h-3.5 w-3.5"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="12" cy="12" r="10" />
          <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3" />
          <line x1="12" y1="17" x2="12.01" y2="17" />
        </svg>
      </button>
    )
  }
</span>
