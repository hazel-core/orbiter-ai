---
import { cn } from "../utils/merge";

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
  class?: string;
}

const { items, class: className } = Astro.props;

const chevronSvg = '<svg class="h-4 w-4 text-muted/60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"/></svg>';
---

<nav aria-label="Breadcrumb" class={cn("flex items-center gap-1 text-sm", className)}>
  <ol class="flex items-center gap-1">
    {items.map((item, index) => (
      <li class="flex items-center gap-1">
        {index > 0 && <span class="shrink-0" set:html={chevronSvg} />}
        {item.href && index < items.length - 1 ? (
          <a
            href={item.href}
            class="text-muted hover:text-dark transition-colors duration-150"
          >
            {item.label}
          </a>
        ) : (
          <span class="text-dark font-medium truncate max-w-[200px]">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
