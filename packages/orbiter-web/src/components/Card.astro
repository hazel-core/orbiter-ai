---
import { cn } from "../utils/merge";

interface Props {
  as?: "div" | "article" | "section";
  class?: string;
  [key: string]: any;
}

const { as: Tag = "div", class: className, ...rest } = Astro.props;
---

<Tag
  class={cn(
    "rounded-xl bg-subtle/80 border border-dark/[0.08] transition-all duration-300 hover:-translate-y-0.5 hover:border-dark/20 hover:shadow-lg",
    className,
  )}
  {...rest}
>
  <slot />
</Tag>
