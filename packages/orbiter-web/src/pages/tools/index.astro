---
import PageLayout from "../../layouts/PageLayout.astro";
import Button from "../../components/Button.astro";
const breadcrumbs = [{ label: "Tools" }];

const categoryOptions = [
  { value: "", label: "All categories" },
  { value: "search", label: "Search" },
  { value: "code", label: "Code" },
  { value: "file", label: "File" },
  { value: "data", label: "Data" },
  { value: "communication", label: "Communication" },
  { value: "custom", label: "Custom" },
];

/* Icons */
const searchIcon = '<svg class="h-4 w-4 text-muted" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>';
const wrenchIcon = '<svg class="h-12 w-12 text-muted/40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>';
const gridIcon = '<svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/></svg>';
const listIcon = '<svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="8" y1="6" x2="21" y2="6"/><line x1="8" y1="12" x2="21" y2="12"/><line x1="8" y1="18" x2="21" y2="18"/><line x1="3" y1="6" x2="3.01" y2="6"/><line x1="3" y1="12" x2="3.01" y2="12"/><line x1="3" y1="18" x2="3.01" y2="18"/></svg>';
const plusIcon = '<svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>';
const schemaIcon = '<svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>';
---

<PageLayout
  title="Tools"
  description="Browse and manage tools"
  activeSection="tools"
  breadcrumbs={breadcrumbs}
>
  <div class="p-6 max-w-6xl mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6 flex-wrap gap-3">
      <div>
        <h1 class="text-2xl font-semibold text-dark">Tools</h1>
        <p class="text-sm text-muted mt-1">Browse available tools and assign them to agents</p>
      </div>
      <div class="flex items-center gap-2">
        <Button href="/tools/schema-editor" variant="bordered">
          <span set:html={schemaIcon} />
          Schema Editor
        </Button>
        <Button href="/tools/new" variant="primary">
          <span set:html={plusIcon} />
          Create Tool
        </Button>
        <!-- View toggle -->
        <div class="flex items-center border border-dark/[0.08] rounded-lg overflow-hidden">
          <button id="view-grid" class="p-2 bg-subtle/80 text-dark transition-colors" title="Grid view">
            <span set:html={gridIcon} />
          </button>
          <button id="view-list" class="p-2 text-muted hover:text-dark transition-colors" title="List view">
            <span set:html={listIcon} />
          </button>
        </div>
      </div>
    </div>

    <!-- Filters -->
    <div class="flex items-center gap-3 mb-6 flex-wrap">
      <!-- Search -->
      <div class="relative flex-1 min-w-[200px] max-w-sm">
        <span class="absolute left-3 top-1/2 -translate-y-1/2" set:html={searchIcon} />
        <input
          type="text"
          id="tool-search"
          placeholder="Search tools..."
          class="w-full bg-paper border border-dark/[0.08] rounded-lg pl-9 pr-3 py-2 text-sm text-dark placeholder:text-muted/60 transition-all duration-200 outline-none focus:border-coral focus:ring-2 focus:ring-coral/20"
        />
      </div>

      <!-- Category filter -->
      <select
        id="filter-category"
        class="bg-paper border border-dark/[0.08] rounded-lg px-3 py-2 text-sm text-dark outline-none focus:border-coral focus:ring-2 focus:ring-coral/20 appearance-none pr-8 cursor-pointer"
      >
        {categoryOptions.map(opt => (
          <option value={opt.value}>{opt.label}</option>
        ))}
      </select>
    </div>

    <!-- Tools grid -->
    <div id="tools-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    </div>

    <!-- Tools list -->
    <div id="tools-list" class="hidden flex flex-col gap-2">
    </div>

    <!-- Empty state -->
    <div id="empty-state" class="hidden flex flex-col items-center justify-center py-20 text-center">
      <div class="mb-4" set:html={wrenchIcon} />
      <h2 class="text-lg font-semibold text-dark mb-2">No tools yet</h2>
      <p class="text-sm text-muted mb-6 max-w-sm">
        Tools will appear here once created. Create custom tools from agent or workflow editors.
      </p>
    </div>

    <!-- No results state -->
    <div id="no-results" class="hidden flex flex-col items-center justify-center py-16 text-center">
      <p class="text-sm text-muted">No tools match your filters. Try adjusting the search or category.</p>
    </div>

    <!-- Loading state -->
    <div id="loading-state" class="flex items-center justify-center py-20">
      <p class="text-sm text-muted">Loading tools...</p>
    </div>
  </div>
</PageLayout>

<!-- Tool card template (grid view) -->
<template id="tool-card-template">
  <a class="block rounded-xl bg-subtle/80 border border-dark/[0.08] transition-all duration-300 hover:-translate-y-0.5 hover:border-dark/20 hover:shadow-lg p-5 no-underline" data-field="card-link">
    <div class="flex items-start justify-between mb-2">
      <div class="flex items-center gap-2.5 min-w-0">
        <span class="flex-shrink-0 w-8 h-8 rounded-lg flex items-center justify-center text-sm" data-field="category-icon"></span>
        <h3 class="font-semibold text-dark text-sm truncate" data-field="tool-name"></h3>
      </div>
      <span class="flex-shrink-0 text-xs px-2 py-0.5 rounded-full font-medium" data-field="category-badge"></span>
    </div>
    <p class="text-xs text-muted line-clamp-2 mb-3 min-h-[2rem]" data-field="tool-description"></p>
    <div class="flex items-center gap-3 text-xs text-muted">
      <span data-field="param-count"></span>
      <span data-field="usage-count"></span>
      <span class="text-xs px-1.5 py-0.5 rounded bg-muted/10 text-muted" data-field="tool-type"></span>
    </div>
  </a>
</template>

<!-- Tool row template (list view) -->
<template id="tool-row-template">
  <a class="flex items-center gap-4 rounded-xl bg-subtle/80 border border-dark/[0.08] transition-all duration-200 hover:border-dark/20 hover:shadow-md px-5 py-3.5 no-underline" data-field="row-link">
    <span class="flex-shrink-0 w-8 h-8 rounded-lg flex items-center justify-center text-sm" data-field="category-icon"></span>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2">
        <h3 class="font-semibold text-dark text-sm truncate" data-field="tool-name"></h3>
        <span class="flex-shrink-0 text-xs px-2 py-0.5 rounded-full font-medium" data-field="category-badge"></span>
      </div>
      <p class="text-xs text-muted truncate mt-0.5" data-field="tool-description"></p>
    </div>
    <div class="flex items-center gap-4 text-xs text-muted flex-shrink-0">
      <span data-field="param-count"></span>
      <span data-field="usage-count"></span>
      <span class="px-1.5 py-0.5 rounded bg-muted/10 text-muted" data-field="tool-type"></span>
    </div>
  </a>
</template>

<script is:inline>
  (function () {
    /* ---------------------------------------------------------------
       DOM refs
    --------------------------------------------------------------- */
    var gridContainer = document.getElementById("tools-grid");
    var listContainer = document.getElementById("tools-list");
    var emptyState = document.getElementById("empty-state");
    var noResults = document.getElementById("no-results");
    var loadingState = document.getElementById("loading-state");
    var searchInput = document.getElementById("tool-search");
    var filterCategory = document.getElementById("filter-category");
    var viewGridBtn = document.getElementById("view-grid");
    var viewListBtn = document.getElementById("view-list");
    var cardTemplate = document.getElementById("tool-card-template");
    var rowTemplate = document.getElementById("tool-row-template");

    var allTools = [];
    var viewMode = localStorage.getItem("tools-view") || "grid";

    /* ---------------------------------------------------------------
       Category metadata
    --------------------------------------------------------------- */
    var categoryMeta = {
      search: { icon: "üîç", bg: "bg-zen-blue/10", text: "text-zen-blue", label: "Search" },
      code: { icon: "üíª", bg: "bg-[#f59e0b]/10", text: "text-[#f59e0b]", label: "Code" },
      file: { icon: "üìÅ", bg: "bg-zen-green/10", text: "text-zen-green", label: "File" },
      data: { icon: "üìä", bg: "bg-[#a855f7]/10", text: "text-[#a855f7]", label: "Data" },
      communication: { icon: "üí¨", bg: "bg-coral/10", text: "text-coral", label: "Comms" },
      custom: { icon: "‚öôÔ∏è", bg: "bg-muted/10", text: "text-muted", label: "Custom" },
    };

    /* ---------------------------------------------------------------
       Helpers
    --------------------------------------------------------------- */
    function getParamCount(schemaJson) {
      try {
        var schema = JSON.parse(schemaJson || "{}");
        if (schema.properties) return Object.keys(schema.properties).length;
        if (schema.parameters && schema.parameters.properties) {
          return Object.keys(schema.parameters.properties).length;
        }
      } catch (e) { /* ignore */ }
      return 0;
    }

    function getCategoryInfo(cat) {
      return categoryMeta[cat] || categoryMeta.custom;
    }

    /* ---------------------------------------------------------------
       View toggle
    --------------------------------------------------------------- */
    function setView(mode) {
      viewMode = mode;
      localStorage.setItem("tools-view", mode);
      if (mode === "grid") {
        viewGridBtn.classList.add("bg-subtle/80", "text-dark");
        viewGridBtn.classList.remove("text-muted");
        viewListBtn.classList.remove("bg-subtle/80", "text-dark");
        viewListBtn.classList.add("text-muted");
      } else {
        viewListBtn.classList.add("bg-subtle/80", "text-dark");
        viewListBtn.classList.remove("text-muted");
        viewGridBtn.classList.remove("bg-subtle/80", "text-dark");
        viewGridBtn.classList.add("text-muted");
      }
      renderTools();
    }

    viewGridBtn.addEventListener("click", function () { setView("grid"); });
    viewListBtn.addEventListener("click", function () { setView("list"); });

    /* ---------------------------------------------------------------
       Filtering
    --------------------------------------------------------------- */
    function getFilteredTools() {
      var search = (searchInput.value || "").toLowerCase().trim();
      var cat = filterCategory.value;

      return allTools.filter(function (t) {
        if (search) {
          var nameMatch = t.name.toLowerCase().indexOf(search) !== -1;
          var descMatch = t.description.toLowerCase().indexOf(search) !== -1;
          if (!nameMatch && !descMatch) return false;
        }
        if (cat && t.category !== cat) return false;
        return true;
      });
    }

    /* ---------------------------------------------------------------
       Render tools
    --------------------------------------------------------------- */
    function renderTools() {
      if (loadingState) loadingState.classList.add("hidden");

      if (allTools.length === 0) {
        gridContainer.classList.add("hidden");
        listContainer.classList.add("hidden");
        noResults.classList.add("hidden");
        emptyState.classList.remove("hidden");
        return;
      }

      var filtered = getFilteredTools();

      if (filtered.length === 0) {
        gridContainer.classList.add("hidden");
        listContainer.classList.add("hidden");
        emptyState.classList.add("hidden");
        noResults.classList.remove("hidden");
        return;
      }

      noResults.classList.add("hidden");
      emptyState.classList.add("hidden");

      if (viewMode === "grid") {
        listContainer.classList.add("hidden");
        gridContainer.classList.remove("hidden");
        gridContainer.innerHTML = "";
        filtered.forEach(function (tool) { renderGridCard(tool); });
      } else {
        gridContainer.classList.add("hidden");
        listContainer.classList.remove("hidden");
        listContainer.innerHTML = "";
        filtered.forEach(function (tool) { renderListRow(tool); });
      }
    }

    function renderGridCard(tool) {
      var card = cardTemplate.content.cloneNode(true);
      var catInfo = getCategoryInfo(tool.category);
      var paramCount = getParamCount(tool.schema_json);

      card.querySelector('[data-field="card-link"]').href = "/tools/" + tool.id;

      var iconEl = card.querySelector('[data-field="category-icon"]');
      iconEl.className = "flex-shrink-0 w-8 h-8 rounded-lg flex items-center justify-center text-sm " + catInfo.bg;
      iconEl.textContent = catInfo.icon;

      card.querySelector('[data-field="tool-name"]').textContent = tool.name;

      var badge = card.querySelector('[data-field="category-badge"]');
      badge.className = "flex-shrink-0 text-xs px-2 py-0.5 rounded-full font-medium " + catInfo.bg + " " + catInfo.text;
      badge.textContent = catInfo.label;

      card.querySelector('[data-field="tool-description"]').textContent = tool.description || "No description";

      card.querySelector('[data-field="param-count"]').textContent = paramCount + " param" + (paramCount !== 1 ? "s" : "");
      card.querySelector('[data-field="usage-count"]').textContent = tool.usage_count + " uses";

      var typeEl = card.querySelector('[data-field="tool-type"]');
      typeEl.textContent = tool.tool_type;
      if (tool.tool_type === "mcp") {
        typeEl.className = "text-xs px-1.5 py-0.5 rounded bg-zen-blue/10 text-zen-blue font-semibold uppercase tracking-wide";
        typeEl.textContent = "MCP";
      }

      gridContainer.appendChild(card);
    }

    function renderListRow(tool) {
      var row = rowTemplate.content.cloneNode(true);
      var catInfo = getCategoryInfo(tool.category);
      var paramCount = getParamCount(tool.schema_json);

      row.querySelector('[data-field="row-link"]').href = "/tools/" + tool.id;

      var iconEl = row.querySelector('[data-field="category-icon"]');
      iconEl.className = "flex-shrink-0 w-8 h-8 rounded-lg flex items-center justify-center text-sm " + catInfo.bg;
      iconEl.textContent = catInfo.icon;

      row.querySelector('[data-field="tool-name"]').textContent = tool.name;

      var badge = row.querySelector('[data-field="category-badge"]');
      badge.className = "flex-shrink-0 text-xs px-2 py-0.5 rounded-full font-medium " + catInfo.bg + " " + catInfo.text;
      badge.textContent = catInfo.label;

      row.querySelector('[data-field="tool-description"]').textContent = tool.description || "No description";

      row.querySelector('[data-field="param-count"]').textContent = paramCount + " params";
      row.querySelector('[data-field="usage-count"]').textContent = tool.usage_count + " uses";

      var rowTypeEl = row.querySelector('[data-field="tool-type"]');
      rowTypeEl.textContent = tool.tool_type;
      if (tool.tool_type === "mcp") {
        rowTypeEl.className = "px-1.5 py-0.5 rounded bg-zen-blue/10 text-zen-blue font-semibold uppercase tracking-wide";
        rowTypeEl.textContent = "MCP";
      }

      listContainer.appendChild(row);
    }

    /* ---------------------------------------------------------------
       Data fetching
    --------------------------------------------------------------- */
    function fetchTools() {
      fetch("/api/v1/tools")
        .then(function (res) {
          if (!res.ok) throw new Error("Failed to load tools");
          return res.json();
        })
        .then(function (tools) {
          allTools = tools;
          renderTools();
        })
        .catch(function () {
          if (loadingState) loadingState.classList.add("hidden");
          gridContainer.innerHTML = '<p class="text-sm text-coral col-span-full text-center py-10">Failed to load tools. Is the API server running?</p>';
          gridContainer.classList.remove("hidden");
        });
    }

    /* ---------------------------------------------------------------
       Event listeners
    --------------------------------------------------------------- */
    var filterTimeout;
    function onFilterChange() {
      clearTimeout(filterTimeout);
      filterTimeout = setTimeout(renderTools, 150);
    }
    searchInput.addEventListener("input", onFilterChange);
    filterCategory.addEventListener("change", onFilterChange);

    /* ---------------------------------------------------------------
       Initial load
    --------------------------------------------------------------- */
    setView(viewMode);
    fetchTools();
  })();
</script>
