      neuronTokenBudget.classList.remove("hidden");

      var total = 0;
      var items = [];
      neurons.forEach(function (n, idx) {
        if (n.enabled === false) return;
        var meta = NEURON_TYPE_META[n.type] || { label: n.type };
        var text = n.template || "";
        var estimated = Math.max(Math.ceil(text.length / 4), 50);
        if (n.max_tokens && estimated > n.max_tokens) estimated = n.max_tokens;
        total += estimated;
        items.push({ label: n.label || meta.label, tokens: estimated, maxTokens: n.max_tokens, colorIdx: idx });
      });

      neuronTotalTokens.textContent = total.toLocaleString() + " tokens (est.)";

      neuronBudgetBars.innerHTML = "";
      items.forEach(function (item) {
        var pct = total > 0 ? Math.max((item.tokens / total) * 100, 2) : 0;
        var colorClass = BUDGET_COLORS[item.colorIdx % BUDGET_COLORS.length];
        var bar = document.createElement("div");
        bar.className = "flex items-center gap-2";
