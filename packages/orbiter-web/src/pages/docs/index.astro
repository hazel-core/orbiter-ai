---
import PageLayout from "../../layouts/PageLayout.astro";

const breadcrumbs = [{ label: "Documentation" }];

const sections = [
  {
    key: "getting-started",
    label: "Getting Started",
    icon: '<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.84.7-2.13-.09-2.91a2.18 2.18 0 0 0-2.91-.09z"/><path d="m12 15-3-3a22 22 0 0 1 2-3.95A12.88 12.88 0 0 1 22 2c0 2.72-.78 7.5-6 11a22.35 22.35 0 0 1-4 2z"/><path d="M9 12H4s.55-3.03 2-4c1.62-1.08 4 0 4 0"/><path d="M12 15v5s3.03-.55 4-2c1.08-1.62 0-4 0-4"/></svg>',
    description: "Install Orbiter and create your first agent",
  },
  {
    key: "guides",
    label: "Guides",
    icon: '<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>',
    description: "In-depth tutorials on agents, tools, workflows, and more",
  },
  {
    key: "api-reference",
    label: "API Reference",
    icon: '<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>',
    description: "Complete reference for the Orbiter Python SDK and REST API",
  },
  {
    key: "concepts",
    label: "Concepts",
    icon: '<svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>',
    description: "Understand the architecture and design principles behind Orbiter",
  },
];
---

<PageLayout
  title="Documentation"
  description="Learn how to use Orbiter"
  activeSection="docs"
  breadcrumbs={breadcrumbs}
>
  <div class="p-6 max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-2xl font-semibold text-dark mb-2">Documentation</h1>
      <p class="text-sm text-muted">
        Learn how to build, deploy, and monitor AI agents with Orbiter.
      </p>
    </div>

    <!-- Coming soon notice -->
    <div class="rounded-xl border border-dark/[0.08] bg-subtle/30 p-6 mb-8">
      <div class="flex items-start gap-3">
        <svg class="h-5 w-5 text-coral shrink-0 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"/>
          <line x1="12" y1="16" x2="12" y2="12"/>
          <line x1="12" y1="8" x2="12.01" y2="8"/>
        </svg>
        <div>
          <h3 class="text-sm font-semibold text-dark mb-1">Documentation is being written</h3>
          <p class="text-sm text-muted">
            We're actively building out the documentation. Check back soon for comprehensive guides, tutorials, and API references.
          </p>
        </div>
      </div>
    </div>

    <!-- Section cards -->
    <div class="grid gap-4 sm:grid-cols-2">
      {sections.map((sec) => (
        <div class="rounded-xl border border-dark/[0.08] bg-paper p-5 opacity-60">
          <div class="flex items-center gap-2 mb-3">
            <span class="text-coral" set:html={sec.icon} />
            <h2 class="text-base font-semibold text-dark">{sec.label}</h2>
          </div>
          <p class="text-sm text-muted">{sec.description}</p>
          <p class="text-xs text-muted/60 mt-3 italic">Coming soon</p>
        </div>
      ))}
    </div>
  </div>
</PageLayout>
