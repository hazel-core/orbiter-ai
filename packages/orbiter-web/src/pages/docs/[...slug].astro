---
import PageLayout from "../../layouts/PageLayout.astro";

const breadcrumbs = [
  { label: "Documentation", href: "/docs" },
  { label: "Page not found" },
];
---

<PageLayout
  title="Documentation"
  description="Page not found"
  activeSection="docs"
  breadcrumbs={breadcrumbs}
>
  <div class="p-6 max-w-3xl mx-auto">
    <a
      href="/docs"
      class="inline-flex items-center gap-1.5 text-xs font-medium text-muted hover:text-coral transition-colors mb-6 no-underline"
    >
      <svg
        class="h-3.5 w-3.5"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><polyline points="15 18 9 12 15 6"></polyline></svg
      >
      All docs
    </a>

    <div class="flex flex-col items-center justify-center py-20 text-center">
      <svg class="h-12 w-12 text-muted/40 mb-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
      </svg>
      <h2 class="text-lg font-semibold text-dark mb-2">Page not found</h2>
      <p class="text-sm text-muted mb-6 max-w-sm">
        This documentation page doesn't exist yet. We're actively building out the docs.
      </p>
      <a
        href="/docs"
        class="inline-flex items-center gap-2 rounded-lg bg-coral px-4 py-2 text-sm font-medium text-white hover:bg-coral/90 transition-colors no-underline"
      >
        Back to Documentation
      </a>
    </div>
  </div>
</PageLayout>
