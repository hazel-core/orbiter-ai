---
import PageLayout from "../../layouts/PageLayout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const docs = await getCollection("docs");
  return docs.map((doc) => ({
    params: { slug: doc.id },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await render(doc);

const breadcrumbs = [
  { label: "Documentation", href: "/docs" },
  { label: doc.data.title },
];
---

<PageLayout
  title={doc.data.title}
  description={doc.data.description}
  activeSection="docs"
  breadcrumbs={breadcrumbs}
>
  <div class="p-6 max-w-3xl mx-auto">
    <!-- Back link -->
    <a
      href="/docs"
      class="inline-flex items-center gap-1.5 text-xs font-medium text-muted hover:text-coral transition-colors mb-6 no-underline"
    >
      <svg
        class="h-3.5 w-3.5"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><polyline points="15 18 9 12 15 6"></polyline></svg
      >
      All docs
    </a>

    <!-- Article -->
    <article class="prose-orbiter">
      <Content />
    </article>
  </div>
</PageLayout>

<style is:global>
  /* Markdown prose styling */
  .prose-orbiter {
    color: var(--zen-dark);
    line-height: 1.7;
  }
  .prose-orbiter h1 {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  .prose-orbiter h2 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.375rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }
  .prose-orbiter h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .prose-orbiter p {
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }
  .prose-orbiter ul,
  .prose-orbiter ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    font-size: 0.875rem;
  }
  .prose-orbiter li {
    margin-bottom: 0.25rem;
  }
  .prose-orbiter a {
    color: var(--zen-coral, #f76f53);
    text-decoration: none;
  }
  .prose-orbiter a:hover {
    text-decoration: underline;
  }
  .prose-orbiter code {
    font-size: 0.8125rem;
    background: rgba(0, 0, 0, 0.04);
    border-radius: 0.25rem;
    padding: 0.125rem 0.375rem;
  }
  .prose-orbiter pre {
    background: rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 0.75rem;
    padding: 1rem;
    overflow-x: auto;
    margin-bottom: 1rem;
    font-size: 0.8125rem;
    line-height: 1.6;
  }
  .prose-orbiter pre code {
    background: transparent;
    padding: 0;
    border-radius: 0;
  }
  .prose-orbiter table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1rem;
    font-size: 0.8125rem;
  }
  .prose-orbiter th {
    text-align: left;
    font-weight: 600;
    padding: 0.5rem 0.75rem;
    border-bottom: 2px solid rgba(0, 0, 0, 0.08);
  }
  .prose-orbiter td {
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }
  .prose-orbiter strong {
    font-weight: 600;
  }
  .prose-orbiter hr {
    border: none;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    margin: 2rem 0;
  }

  /* Dark mode overrides */
  [data-theme="dark"] .prose-orbiter code {
    background: rgba(255, 255, 255, 0.06);
  }
  [data-theme="dark"] .prose-orbiter pre {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(255, 255, 255, 0.08);
  }
  [data-theme="dark"] .prose-orbiter h2 {
    border-bottom-color: rgba(255, 255, 255, 0.08);
  }
  [data-theme="dark"] .prose-orbiter th {
    border-bottom-color: rgba(255, 255, 255, 0.1);
  }
  [data-theme="dark"] .prose-orbiter td {
    border-bottom-color: rgba(255, 255, 255, 0.06);
  }
  [data-theme="dark"] .prose-orbiter hr {
    border-top-color: rgba(255, 255, 255, 0.08);
  }
</style>
